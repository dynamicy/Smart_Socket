<mmsrc version="1.7.0">
    <global>
        <!-- logfile location (only written if disko built with messages=y) -->
        <parameter name="logfile"     value="./logfile" />
        
        <!-- the inputmap.xml has to be stored under the current path,
             and here we use the map named as "default" -->
        <parameter name="inputmap"    value="default" />
        
        <parameter name="prefix"      value="./" />
        <parameter name="sysconfig"   value="./" />
        <parameter name="data"        value="./" />
        <parameter name="theme"       value="" />
        
        <!-- if you set the firstplugin with an available pluginid, the MMSSwitcher
             switches direct to this plugin during startup -->
        <parameter name="firstplugin" value="" />
        <parameter name="shutdown"    value="false" />
        <parameter name="shutdowncmd" value="" />
        
        <!-- possible values are CLICK and MOVE, which influences the selection
             and pressed states of widgets -->
        <parameter name="inputmode"   value="CLICK" />
    </global>
    <graphics>
        <!-- set to true if the application should switch to fullscreen -->
        <parameter name="fullscreen"  value="false" />
        
        <!-- resolution -->
        <parameter name="xres"        value="640" />
        <parameter name="yres"        value="480" />
        
        <!-- graphics backend: fbdev, x11 or dfb -->
        <parameter name="backend"     value="x11" />
        
        <!-- graphics outputtype depending on given backend, xvshm, xshm -->
        <parameter name="outputtype"  value="XVSHM" />
        
        <!-- videolayer settings -->
        <parameter name="videolayerid"          value="0" />
        <parameter name="videolayerpixelformat" value="RGB32" />
        <parameter name="videolayeroptions"     value="" />
        <parameter name="videolayerbuffermode"  value="BACKSYSTEM" />

        <!-- gfxlayer settings -->
        <parameter name="graphicslayerid"          value="0" />
        <parameter name="graphicslayerpixelformat" value="RGB32" />
        <parameter name="graphicslayeroptions"     value="" />
        <parameter name="graphicslayerbuffermode"  value="BACKSYSTEM" />
        
        <!-- set the visible rectangle to handle TV over scan
             please note: if you set vrect.w and vrect.h to "0"
                          the visible screen area will be set to 0,0,xres,yres -->
        <parameter name="vrect.x"     value="0" />
        <parameter name="vrect.y"     value="0" />
        <parameter name="vrect.w"     value="0" />
        <parameter name="vrect.h"     value="0" />
        
        <!-- handle touchscreen resolution and offsets 
             (resolution of 0x0 uses default resolution) -->
        <parameter name="touchrect.x" value="0" />
        <parameter name="touchrect.y" value="0" />
        <parameter name="touchrect.w" value="0" />
        <parameter name="touchrect.h" value="0" />
        
        <!-- show x11 mouse pointer (true for disko mouse pointer emulation, 
             false to disable it --> 
        <parameter name="pointer"     value="external" />
        
        <!-- internal pixelformat settings -->
        <parameter name="graphicswindowpixelformat"  value="RGB32" />
	<parameter name="graphicssurfacepixelformat" value="RGB32" />

	<!-- true => false -->
	<parameter name="extendedaccel" value="false" />
	<parameter name="allocmethod"   value="malloc" />

	<!-- hide application on startup, until show() is called -->
	<parameter name="hideapplication" value="false" />
</graphics>

<videolayer>
	<parameter name="id"          value="1"          />
	<parameter name="xres"        value="640"        />
	<parameter name="yres"        value="480"        />
	<parameter name="xpos"        value="0"          />
	<parameter name="ypos"        value="0"          />
	<!-- YUY2, YV12, UYVY -->
	<parameter name="pixelformat" value="UYVY"       />
	<parameter name="options"     value=""           />
	<parameter name="buffermode"  value="BACKSYSTEM" />
</videolayer>
</mmsrc>
